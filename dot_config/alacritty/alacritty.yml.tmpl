scrolling:
  history: 50000

font:
  size: 10
  normal:
    family: terminus_emoji
    style: Medium

colors:
  primary:
    background: '#000000'
    foreground: '#ffffff'

  normal:
    black:   '#000000'
    red:     '#cd0000'
    green:   '#00cd00'
    yellow:  '#cdcd00'
    blue:    '#0080ff'
    magenta: '#cd00cd'
    cyan:    '#00cdcd'
    white:   '#ffffff'

  bright:
    black:   '#333333'
    red:     '#ff0000'
    green:   '#00cd00'
    yellow:  '#cdcd00'
    blue:    '#0080ff'
    magenta: '#cd00cd'
    cyan:    '#00cdcd'
    white:   '#ffffff'

live_config_reload: true

hints:
  alphabet: "jfkdls;ahgurieowpq"
  enabled:
    - regex: "(magnet:|mailto:|gemini:|gopher:|https:|http:|news:|file:|git:|ssh:|ftp:)\
              [^\u0000-\u001F\u007F-\u009F<>\"\\s{-}\\^⟨⟩`]+"
      command: xdg-open
      post_processing: true
      mouse:
        enabled: true
        mods: None
      binding:
        key: U
        mods: Alt
